rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- FUNCIONES HELPER ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- REGLAS POR COLECCIÓN ---

    // 1. Tenants (Configuración del Usuario)
    match /tenants/{tenantId} {
      allow read, write: if isOwner(tenantId);
      
      // Sub-colección de estadísticas diarias
      match /stats_daily/{dateId} {
        allow read: if isOwner(tenantId);
        allow write: if false; // Solo Cloud Functions
      }
      
      // Sub-colección de documentos de conocimiento
      match /knowledge_docs/{docId} {
        allow read: if isOwner(tenantId);
        allow delete: if isOwner(tenantId);
        allow create, update: if false; // Solo Cloud Functions
      }
      
      // Sub-colección de vectores (embeddings)
      match /vectors/{vectorId} {
        allow read: if isOwner(tenantId);
        allow write: if false; // Solo Cloud Functions
      }
      
      // Sub-colección de triggers/automatizaciones
      match /triggers/{triggerId} {
        allow read, write: if isOwner(tenantId);
      }
    }
    
    // 2. Pages Map (Mapeo: PageID -> TenantID)
    // Solo el backend puede escribir, usuarios pueden leer para validar
    match /pages_map/{pageId} {
      allow read: if isAuthenticated();
      allow write: if false; // Solo Cloud Functions
    }
    
    // 3. Conversaciones (Única fuente de verdad)
    match /conversations/{conversationId} {
      // Lectura: Solo el tenant dueño
      allow read: if isAuthenticated() && 
        resource.data.tenant_id == request.auth.uid;
      
      // Escritura: Solo Cloud Functions (webhook)
      allow write: if false;
      
      // Sub-colección de mensajes
      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
          get(/databases/$(database)/documents/conversations/$(conversationId)).data.tenant_id == request.auth.uid;
        allow write: if false; // Solo Cloud Functions
      }
    }
    
    // 4. Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
